<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" android:background="#FFFFFF"
    tools:context="com.sathi.android.sathiapp.Setpwd">
    <ImageView
        android:layout_width="151dp"
        android:layout_height="321dp"
        android:id="@+id/imageView2"
        android:src="@mipmap/sathi_back"

        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:text=" Enter  "
        android:id="@+id/button40"
        android:textColor="#FFFFFF"
        android:background="#00A99D"
        android:layout_below="@+id/textView7"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="323dp"
        android:layout_height="46dp"
        android:inputType="textPassword"
        android:ems="10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/editText40"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:hint="  Enter Password"
        android:background="#00A99D"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.088"
        android:textColorHint="#FFFFFF"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text=""
        android:id="@+id/textView6"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:id="@+id/textView7"
        android:layout_alignLeft="@+id/editText40"
        android:layout_alignStart="@+id/editText40"
        android:layout_alignRight="@+id/editText40"
        android:layout_alignEnd="@+id/editText40"
        android:layout_below="@+id/editText40" />



</RelativeLayout>
