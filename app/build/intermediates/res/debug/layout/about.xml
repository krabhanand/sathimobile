<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >

    <ImageView
        android:layout_width="66dp"
        android:layout_height="38dp"
        android:id="@+id/imageView"
        android:layout_weight="0.12"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/sathi" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ABOUT"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.07" />

    <TextView
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.14"
        android:text="About Sathi Stands for &quot; Soldiers App For Timely Help and Information&quot;. It was developed for Indian Army .Indian army claims that they have more casualties on roads than in battle field and Each day more than 400 people are dying in India i.e more than 13,00,000 each year. Speed is the major cause and Sathi will control it for you.Now it is also available for general public. " />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLOSE"
        android:id="@+id/button3"
        android:layout_weight="0.03"
        android:layout_gravity="center_horizontal" />

